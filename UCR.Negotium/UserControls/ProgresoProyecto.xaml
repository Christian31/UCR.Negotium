            <Border BorderBrush="White" BorderThickness="1">
                <Grid Margin="5,0,0,5">
                    <TextBlock VerticalAlignment="Bottom" Foreground="White" Margin="0,0,5,0" Text="Información General"/>
                    <iconPacks:PackIconModern Foreground="White" Margin="0,5,5,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <iconPacks:PackIconModern.Style>
                            <Style TargetType="{x:Type FrameworkElement}">
                                <Setter Property="iconPacks:PackIconModern.Kind" Value="Hourglass"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusSteps[0], UpdateSourceTrigger=PropertyChanged}" Value="True" >
                                        <Setter Property="iconPacks:PackIconModern.Kind" Value="Check"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </iconPacks:PackIconModern.Style>
                    </iconPacks:PackIconModern>
                </Grid>
            </Border>
        </Grid>
