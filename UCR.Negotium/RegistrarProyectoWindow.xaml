<Controls:MetroWindow x:Class="UCR.Negotium.RegistrarProyectoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:modulos="clr-namespace:UCR.Negotium.UserControls"              
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        GlowBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen"
                      Closing="MetroWindow_Closing"
        Title="Registrar Proyecto | Negotium v1.0" Height="680" Width="1360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Column="0" Grid.Row="0" Name="tcRegistrarProyecto" ItemContainerStyle="{StaticResource menuTabItem}" 
                    Style="{StaticResource menuTabControl}" Margin="15" SelectionChanged="tcRegistrarProyecto_SelectionChanged">
            <TabItem Header="Información General">
                <modulos:InformacionGeneral x:Name="infoGeneral" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Proponente">
                <modulos:Proponente x:Name="proponente" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Caracterización">
                <modulos:Caracterizacion x:Name="caracterizacion" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Inversiones">
                <modulos:Inversiones x:Name="inversiones" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Reinversiones">
                <modulos:Reinversiones x:Name="reinversiones" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Proyección de Ventas">
                <modulos:ProyeccionVentas x:Name="proyeccionVentas" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Costos del Proyecto">
                <modulos:Costos x:Name="costos" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Capital del Proyecto">
                <modulos:CapitalTrabajo x:Name="capitalTrabajo" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Depreciaciones">
                <modulos:Depreciaciones x:Name="depreciaciones" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Financiamiento">
                <modulos:Financiamiento x:Name="financiamientoUc" Style="{StaticResource moduleStyle}"/>
            </TabItem>
            <TabItem Header="Flujo de Caja">
                <Grid Background="AliceBlue" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7*"/>
                        <RowDefinition Height="90*"/>
                    </Grid.RowDefinitions>
                    <Border Style="{StaticResource borderStyle}" Background="LightBlue">
                        <TextBlock Text="Flujo de Caja" Style="{StaticResource textTitleStyle}"/>
                    </Border>
                    <Border Grid.Row="1" Style="{StaticResource borderStyle}">

                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        <modulos:ProgresoProyecto Grid.Column="0" Grid.Row="1" Margin="1,15,1,1" Background="#5D8AA3" 
                                  x:Name="progreso"/>
    </Grid>
</Controls:MetroWindow>
