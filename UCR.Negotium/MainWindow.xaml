<Controls:MetroWindow x:Class="UCR.Negotium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:switch="clr-namespace:UCR.Negotium.Utils"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCR.Negotium"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Title="Principal | Negotium v1.0" Height="550" Width="950">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Column="0" Grid.Row="0" x:Name="mainMenu" Margin="5,5,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Left">
            <MenuItem Header="Archivo">
                <MenuItem Header="Nuevo Proyecto" Name="menuItemCrear" Click="btnCrear_Click">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Ayuda">
                
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="100,47,20,5">
                <Label Content="Filtrar por: "/>
                <ComboBox ItemsSource="{Binding Estados}" Width="120" Margin="0,0,15,0" 
                          Name="cbFiltro" SelectionChanged="cbFiltro_SelectionChanged"/>
                <Label Target="{Binding ElementName=tbName}" Content="Buscar: "/>
                <TextBox Controls:TextBoxHelper.Watermark="Búsqueda" Name="tbBusqueda" TextChanged="tbBusqueda_TextChanged" Width="250" />
            </StackPanel>

            <DataGrid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"
                ItemsSource="{Binding Proyectos, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                SelectedItem="{Binding ProyectoSelected, UpdateSourceTrigger=PropertyChanged}"
                SelectionUnit="FullRow"
                BorderThickness="1"
                BorderBrush="{DynamicResource AccentColorBrush}"
                AllowDrop="False" 
                CanUserAddRows="False" 
                CanUserDeleteRows="False" 
                IsReadOnly="True" 
                AutoGenerateColumns="False"
                Margin="30,32,30,8">

                <DataGrid.Style>
                    <Style BasedOn="{StaticResource MetroDataGrid}" TargetType="{x:Type DataGrid}">
                        <Setter Property="AlternatingRowBackground" Value="{DynamicResource GrayBrush10}" />
                    </Style>
                </DataGrid.Style>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Editar" Click="btnEditar_Click">
                            <MenuItem.Icon>
                                <iconPacks:PackIconModern Kind="Edit" Width="16" Height="16" Margin="4,0,0,0" Foreground="Teal"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Imprimir" Click="btnImprimir_Click">
                            <MenuItem.Icon>
                                <iconPacks:PackIconModern Kind="Printer" Width="16" Height="16" Margin="4,0,0,0" Foreground="Teal"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Archivar" Click="btnArchivar_Click">
                            <MenuItem.Icon>
                                <iconPacks:PackIconModern Kind="FolderLock" Width="16" Height="16" Margin="4,0,0,0" Foreground="Teal"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Reabrir" Click="btnReabrir_Click">
                            <MenuItem.Icon>
                                <iconPacks:PackIconModern Kind="FolderOpen" Width="16" Height="16" Margin="4,0,0,0" Foreground="Teal"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn
                    Binding="{Binding Path=NombreProyecto}" Header="Nombre del Proyecto" Width="3*"/>
                    <DataGridTextColumn
                    Binding="{Binding Path=Proponente}" Header="Proponente" Width="2*"/>
                    <DataGridTextColumn
                    Binding="{Binding Path=Proponente.Organizacion.NombreOrganizacion}" Header="Organización" Width="3*"/>
                    <DataGridTextColumn
                    Binding="{Binding Path=AnoInicial}" Header="Año Inicial" Width="2*"/>
                    <DataGridTemplateColumn Header="Estado" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Activo" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=Archivado}" Value="true">
                                                    <Setter Property="Text" Value="Archivado" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                <Button Width="40" Margin="30,0" Height="40" Name="btnCrear"
                        Click="btnCrear_Click"
                        Style="{StaticResource circleButton}" ToolTip="Agregar un Nuevo Proyecto">
                    <iconPacks:PackIconModern Width="16" Height="16" Kind="Add" Foreground="Teal"/>
                </Button>
                <Button Width="40" Margin="70,0" Height="40" Name="btnEditar" Click="btnEditar_Click"
                        Style="{StaticResource circleButton}" ToolTip="Editar el Proyecto Seleccionado">
                    <iconPacks:PackIconModern Width="16" Height="16" Kind="Edit" Foreground="Teal"/>
                </Button>
                <Button Width="40" Margin="110,0" Height="40" Name="btnGenerarReporte"
                    Click="btnImprimir_Click"
                    Style="{StaticResource circleButton}" ToolTip="Imprimir el Proyecto Seleccionado">
                    <iconPacks:PackIconModern Width="16" Height="16" Kind="Printer" Foreground="Teal"/>
                </Button>
                <Button Width="40" Margin="150,0" Height="40" Name="btnArchivar"
                    Click="btnArchivar_Click"
                    Style="{StaticResource circleButton}" ToolTip="Archivar el Proyecto Seleccionado">
                    <iconPacks:PackIconModern Width="16" Height="16" Kind="FolderLock" Foreground="Teal"/>
                </Button>
                <Button Width="40" Margin="190,0" Height="40" Name="btnReabrir"
                    Click="btnReabrir_Click"
                    Style="{StaticResource circleButton}" ToolTip="Reabrir el Proyecto Seleccionado">
                    <iconPacks:PackIconModern Width="16" Height="16" Kind="FolderOpen" Foreground="Teal"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Controls:MetroWindow>
