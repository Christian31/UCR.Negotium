<Window x:Class="UCR.Negotium.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCR.Negotium"
        mc:Ignorable="d" Height="280" Width="450" ContentRendered="Window_ContentRendered"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" 
        ShowInTaskbar="False" AllowsTransparency="True" Background="Transparent"
        Cursor="AppStarting">
    <Border BorderBrush="{DynamicResource AccentColorBrush}"
            BorderThickness="1" Background="White">
        <Grid HorizontalAlignment="Center" Margin="15">
            <Image x:Name="image" Width="420" Height="200" Source="Resources/logo.jpeg" 
                   VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20"/>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <TextBlock Text="Copyright 2017 Universidad de Costa Rica" TextAlignment="Center"/>
                <TextBlock Text="Todos los derechos reservados" TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>


    

</Window>
